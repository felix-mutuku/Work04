<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#87AED7"
                        android:startColor="#87AED7"
                        android:type="linear" />
                    <!--<stroke
                        android:width="1dp"
                        android:color="#FFCECDCD"/>-->
                    <corners
                        android:radius="10dp" />
                    <padding
                        android:left="5dp"
                        android:right="20dp"
                        android:top="4dp"
                        android:bottom="4dp"/>
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/down_chevron_icon" />
            </item>
        </layer-list>
    </item>
</selector>